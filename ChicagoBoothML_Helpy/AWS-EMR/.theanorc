#!/bin/sh


[global]
# computation device
device = gpu
force_device = False
print_active_device = True

# float type
floatX = float32
warn_float64 = warn
cast_policy = custom

# to enforce strict integer division
int_division = raise

# compilation settings
mode = FAST_RUN
optimizer = fast_run
optimizer_verbose = False
on_opt_error = warn
check_input = True
on_unused_input = ignore
nocleanup = False
cxx = /usr/bin/g++
allow_gc = True

# to avoid reoptimizing unpickled functions
reoptimize_unpickled_function = False


[cuda]
root = /mnt/cuda-7.5


[nvcc]
# specify flags according to: http://docs.nvidia.com/cuda/cuda-compiler-driver-nvcc
# note: Theano nvcc.flags support only parameter/value pairs without space between them,
# e.g.: '--machine 64' is not supported, but '--machine=64' is supported
flags = -I/mnt/cuda-7.5/include
#  -L/mnt/cuda-7.5/lib64
compiler_bindir = /usr/bin
fastmath = True


[pycuda]
init = False


[tensor]
local_elemwise_fusion = True


[gpu]
local_elemwise_fusion = True


[lib]
amdlibm = False


[scan]
allow_gc = False


[blas]
# specify path to BLAS libraries
ldflags = -L/usr/lib64 -lcublas -lcudart
