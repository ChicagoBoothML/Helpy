#!/bin/sh


[global]
# computation device
device = gpu
force_device = False
print_active_device = True

# float type
floatX = float32
warn_float64 = warn
cast_policy = custom

# to enforce strict integer division
int_division = raise

# compilation settings
mode = FAST_RUN
optimizer = fast_run
optimizer_verbose = False
on_opt_error = warn
check_input = True
on_unused_input = ignore
nocleanup = False
cxx = /usr/bin/g++
allow_gc = True

# to avoid reoptimizing unpickled functions
reoptimize_unpickled_function = False


[cuda]
root = /mnt/cuda-7.5


[nvcc]
flags = -I/mnt/cuda-7.5/include -L/mnt/cuda-7.5/lib64
compiler_bindir = /usr/bin
fastmath = True


[blas]
ldflags = -L/mnt/cuda-7.5/lib64 -lcublas -lnvblas


[pycuda]
init = True


[tensor]
local_elemwise_fusion = True


[gpu]
local_elemwise_fusion = True


[lib]
amdlibm = False


[scan]
allow_gc = False
